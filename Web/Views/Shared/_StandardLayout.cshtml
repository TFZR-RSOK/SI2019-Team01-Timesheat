								</li>
								<li class="nav__item" role="menuitem">
									<a href="./reports.html" class="nav__link">Izvestaji</a>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</header>
			<!-- .header -->
			<div class="wrap">
				<section class="content">
					<div class="content__heading">
						<h2><ico class="font-ico-home"></ico>@Model.PageTitle</h2>
					</div>
					@RenderBody()
